<div class="container">
  <div class="row">
    <%= attachment_image_tag @item, :image, :fill, 200, 200, format: 'jpeg' %>
    <div class="col-md-6">
      <div>
        <h2>
          <%= @item.name %>
        </h2>
      </div>
    <div class="firld">
          <%= @item.introduction %>
    </div>
    <div class="firld">
          <%= @item.price %>円
    </div>
    <div class="firld">
    	<% if @item.is_active == true %>
    	  <%= "販売中" %>
    	<% else %>
    	  <%= "売り切れ中" %>
    	<% end %>
    </div>
    </div>
    
  </div>
</div>
