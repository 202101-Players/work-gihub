<h2>注文情報確認</h2>
	<%= form_with model:@order,url: public_orders_path,data: {remote: false} do |f| %>

	<th>商品名</th>
	<th>単価(税込)</th>
	<th>数量</th>
	<th>小計</th>

<% @cart_items.each do |cart_item| %>
    <td><%= cart_item.item.name %></td>
    <td><%= cart_item.item.price.to_s(:delimited) %></td>
    <td><%= cart_item.item.price.to_s(:delimited) %></td>
    <td><%= ((cart_item.item.price*1.10)*(cart_item.count)).to_i %></td>

<% end %>

<th>送料</th>
<th>800</th>

<th>商品合計</th>


<th>請求額</th>



<h2>支払い方法</h2>
<%= @order.payment_method %>

</h2>お届け先</h2>
	<%= @order.address %>
	<%= @order.postal_code %>

  <%= f.hidden_field :payment_method, value:@order.payment_method %>
  <%= f.hidden_field :postal_code, value:@order.postal_code %>
  <%= f.hidden_field :address, value:@order.address %>
  <%= f.hidden_field :ship_cost, value:@order.ship_cost %>
  <%= f.hidden_field :total_payment, value:@order.total_payment %>

	<%= f.submit "購入を確定する", class: "btn btn-success" %>

<% end %>