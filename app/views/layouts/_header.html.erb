<header>
  <nav class="navbar navbar-expand-lg navbar">
    <div class="container">
      <a class="navbar-brand" href="/"><span>LOGO</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if customer_signed_in? %>
          <li><%= link_to '  マイページ',public_customer_path(current_customer),class: 'nav-link' %></li>
          <li><%= link_to ' 商品一覧',class: 'nav-link' %></li>
          <li><%= link_to ' カート',class: 'nav-link'%></li>
          <li><%= link_to ' ログアウト', destroy_customer_session_path, method: :delete,class: 'nav-link' %></li>
        <% elsif admin_signed_in? %>
          <li><%= link_to ' 商品一覧', admin_items_path,class: 'nav-link' %></li>
          <li><%= link_to ' 会員一覧', admin_customers_path,class: 'fas nav-link' %></li>
          <li><%= link_to ' 注文履歴一覧', admin_orders_path,class: 'fas nav-link text-light' %></li>
          <li><%= link_to ' ジャンル一覧', admin_genres_path, class: 'fas nav-link' %></li>
          <li><%= link_to ' ログアウト', destroy_customer_session_path, method: :delete,class: 'nav-link' %></li>
        <% else %>
          <li><%= link_to ' About',home_about_path,class: 'nav-link' %></li>
          <li><%= link_to ' 商品一覧',class: 'nav-link' %></li>
          <li><%= link_to ' 新規登録', new_customer_registration_path,class: 'nav-link' %></li>
          <li><%= link_to ' ログイン', new_customer_session_path ,class: 'nav-link'%></li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
  
  <div class="container">
  <% if admin_signed_in? %>
    <div class="search-form">
      <div class="input-group">
        <%= form_with url:search_path, method: "get", local: true do %>
          <%= text_field_tag :search, params[:search], placeholder: "Search", class: "form-control" %>
          <span class="input-group-btn">
          <%= button_tag "", :name => nil, class: "fas fa-search" %>
          </span>
        <% end %>
      </div>
    </div>
  <% end %>
  </div>
</header>