<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      
      <div class=" mt-4 mb-5">
        <h4 class="px-3 font-weight-bold d-inline-block", style="background-color: #eaf4fc">管理者ログイン</h4><br>
      </div>
      
      <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
        <div class="d-flex flex-row">
          <div class="title" style="margin-left: 140px;">
            <p>メールアドレス</p>
          </div>
          
          <div class="d-flex">
            <%= f.label :" ", class:"label" %>
            <%= f.text_field :email, autofocus: true, autocomplete:"email", placeholder:"sample@example.com", class:'form form-control', style:'width: 500px;' %>
          </div>
        </div>
        
        <div class="d-flex flex-row mt-3">
          <div class="title" style="margin-left: 140px;">
            <p>パスワード</p>
          </div>
          
          <div class="d-flex">
            <%= f.label :" ", class:"label" %>
            <%= f.password_field :password, autofocus: true, autocomplete:"current-password", class:'form form-control', style:'width: 500px;' %>
          </div>
        </div>
        
        <div class="d-flex flex-row mt-3">
          <div class="title" style="margin-left: 140px;">
            <p></p>
          </div>
          
          <div class="d-flex my-5">
            <%= f.label :" ", class:"label" %>
            <button type="submit" class="btn btn-primary btn-block btn-size">ログイン</button>
          </div>
        </div>
      <% end %>
      
      <%= render "admin/shared/links" %>

      </div>
    </div>
  </div>