<div class="container px-5 px-sm-0">
  <div class="col-12">
    <h2>注文履歴詳細</h2>
    <table class="table table-striped">
            <% @orders.each do |order| %>
            
            <tr>
             <td>購入者</td>
             <td><%= link_to admin_order_path(order) do %>
                 <%= order.name %>
                 <% end %></td>
            </tr>
            <tr>
             <td>注文日</td>
             <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
             <td>配送先</td>
             <td><%= order.address %></td>
            </tr>
            <tr>
             <td></td>
             <td><%= order.name %></td>
            </tr>
            <tr>
             <td>支払方法</td>
             <td>銀行振込</td>
            </tr>
            <tr>
              <td>
                <%= form_with model: @order, url:admin_order_path  local: true) do |f| %>
                  <%= f.label :status, '注文ステータス' %></td>
                <td>
                  <%= f.select :status, {'入金待ち': 0, '入金確認': 1, '制作中': 2, '発送準備中': 3, '発送済み': 4}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %></td>
                <td>
                <div class="form-group">
                  <%= f.submit '送信', class: 'btn btn-primary btn-block' %>
                </div>
                <% end %>
                </td>
             </tr>
          </table>
  </div>
</div>
  
<div class="row">
  <div class="col-8">
    <table class="table table-striped">
            <tr>
             <th>注文日時</th>
             <th>購入者</th>
             <th>注文個数</th>
             <th>注文ステータス</th>
             <th colspan="4"></th>
            </tr>
            <% @orders.each do |order| %>
             <tr>
               
              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td><%= link_to admin_order_path(order) do %>
               <%= order.name %></td>
               <% end %>
               <td><%= order.order_items.count %><%= 個 %></td>
               <td>
                <%= form_with model:@order_item url:admin_order_path, local: true do |f| %>
                <%= f.select :making_status, {'制作不可': 0, '制作待ち': 1, '制作中': 2, '制作完了': 3}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
                <% end %>
               </td> 
             </tr>
            <% end %>
    </table>   
   </div>
  
  <div class="col-4">
    <table class="table table-striped">
    <tr>
    </tr> 
    <tr>
    </tr>
    <tr>
        <td>商品合計</td>
        <td><%= orders.total_payment %><%= 円 %></td>
    </tr>
    <tr>
        <td>送料</td>
        <td><%= orders.ship_cost %><%= 円 %></td>
    </tr>
    <tr>
        <td>請求金額合計</td>
        <td><%= Order.all.sum(:price, :ship_cost) %><%= 円 %></td>
    </tr>
  </div>
</div>
  