<div class="container px-5 px-sm-0">
 <h2>注文履歴一覧</h2>
        <table class="table table-striped">
          <tr>
           <th>注文日時</th>
           <th>購入者</th>
           <th>注文個数</th>
           <th>注文ステータス</th>
          
           <th colspan="4"></th>
          </tr>
          <% @orders.each do |order| %>
           <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= link_to admin_order_path(order) do %>
             <%= order.customer.last_name %></td>
             <% end %>
             <td><%= order.order_items.all.sum(:amount) %>個 </td>
             <td><%= order.status_i18n %>
                 
             </td> 
               <% end %>
           </tr>
          
         </table>
</div>