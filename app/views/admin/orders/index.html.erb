<div class="container px-5 px-sm-0">
 <h2>注文履歴一覧</h2>
        <table class="table table-striped">
          <tr>
           <th>注文日時</th>
           <th>購入者</th>
           <th>注文個数</th>
           <th>注文ステータス</th>
           <th colspan="4"></th>
          </tr>
          <% @orders.each do |order| %>
           <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= link_to admin_order_path(order) do %>
             <%= order.name %></td>
             <% end %>
             <td><%= order.order_items.all.sum(:amount) %><%= 個 %></td>
             <td><% if order.status == 0 then %>
                 <%= puts "入金待ち" %>
                 <% elsif order.status  == 1 then %>
                 <%= puts "入金確認" %>
                 <% elsif order.status  == 2 then %>
                 <%= puts "制作中" %>
                 <% elsif order.status  == 3 then %>
                 <%= puts "発送準備中" %>
                 <% else %>
                 <%= puts "発送済み" %>
             </td> 
               <% end %>
           </tr>
          <% end %>
         </table>
</div>
