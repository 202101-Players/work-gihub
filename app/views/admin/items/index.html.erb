<div class="container px-5 px-sm-0">
  <div class="row">
    商品一覧
    
    <div class='col'>
      <%= link_to "商品投稿", new_admin_item_path %>
    </div>

    <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>商品説明</th>
        <th>ジャンル</th>
        <th>税抜価格</th>
        <th>ステータス</th>
        <th colspan="6"></th>
      </tr>
    </thead>
    <tbody>
       <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item) %></td>
          <td><%= item.introduction %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.price %></td>
          <td>
          <% if item.is_active == true %>
            <%= "販売中" %>
          <% else %>
            <%= "販売停止中" %>
          <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  </div>
</div>