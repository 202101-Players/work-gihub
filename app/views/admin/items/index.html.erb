<div class="container">
  <div class="row">
    <div class=" mt-4 mb-5">
      <h4 class="px-3 font-weight-bold d-inline-block", style="background-color: #eaf4fc">商品一覧</h4><br>
    </div>

    <div class='col d-flex justify-content-end'>
      <a class="btn" href="/admin/items/new" role="button" style="color: #ffb6c1; background-color: none;"><i class="fas fa-plus-circle fa-3x fontawesome-class"></i></a>
    </div>

    <table class='table table-hover table-inverse'>
      <thead class="table-primary">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
          <th colspan="10"></th>
        </tr>
      </thead>
      <tbody>
         <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item) %></td>
            <td><%= item.genre.name %></td>
            <td><%= item.price %></td>
            <td>
            <% if item.is_active == true %>
              <div class="text-success"><%= "販売中" %></div>
            <% else %>
              <div class="text-text-black-50"><%= "販売停止中" %></div>
            <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="text-center"><%= paginate @items %></div>