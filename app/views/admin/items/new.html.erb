<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-8 px-5 px-sm-0">
      
      <div class=" mt-4 mb-5">
        <h4 class="px-3 font-weight-bold d-inline-block", style="background-color: #eaf4fc">商品新規登録</h4><br>
      </div>
      
      <%= form_with model: @item, url: admin_items_path, local:true do |f| %>
        <div class="d-flex flex-row">
          <div class="title" style="margin-left: 140px;">
            <p>商品画像</p>
          </div>
          
          <div class="d-flex">
            <%= f.label :" ", class:"label" %>
            <%= f.attachment_field :image %>
          </div>
        </div>

        <div class="d-flex flex-row mt-3">
          <div class="title" style="margin-left: 140px;">
            <p>商品名</p>
          </div>
          
          <div class="d-flex">
            <%= f.label :" ", class:"label" %>
            <%= f.text_field :name, autofocus: true, autocomplete:"current-password", class:'form form-control' %>
          </div>
        </div>
        
        <div class="d-flex flex-row mt-3">
          <div class="title" style="margin-left: 140px;">
            <p>商品悦明</p>
          </div>
          
          <div class="d-flex">
            <%= f.label :" ", class:"label" %>
            <%= f.text_field :introduction, autofocus: true, autocomplete:"current-password", class:'form form-control textarea' %>
          </div>
        </div>
        
        <div class="d-flex flex-row mt-3">
          <div class="title" style="margin-left: 140px;">
            <p>ジャンル</p>
          </div>
          
          <div class="d-flex">
            <%= f.label :" ", class:"label" %>
            <%= f.collection_select :genre_id, @genres, :id, :name, prompt: "-- 選択してください --", style:'width: 300px;' %>
          </div>
        </div>
        
        <div class="d-flex flex-row mt-3">
          <div class="title" style="margin-left: 140px;">
            <p>税抜価格</p>
          </div>
          
          <div class="d-flex">
            <%= f.label :" ", class:"label" %>
            <%= f.text_field :price, style:'width: 300px;' %>円
          </div>
        </div>
        
        
        <div class="d-flex flex-row mt-3">
          <div class="title" style="margin-left: 140px;">
            <p>税抜価格</p>
          </div>
          
          <div class="d-flex">
            <%= f.label :" ", class:"label" %>
            <%= f.radio_button :is_active, true %>
            <%= f.label :is_active, '販売中', value: true, class:"mr-3" %>
            <%= f.radio_button :is_active, false %>
            <%= f.label :is_active, '販売停止中', value: false %>
          </div>
        </div>
        
        <div class="d-flex flex-row mt-3">
          <div class="title" style="margin-left: 140px;">
            <p></p>
          </div>
          
          <div class="d-flex my-3">
            <%= f.label :" ", class:"label" %>
            <button type="submit" class="btn btn-success btn-lg">新規登録</button>
          </div>
        </div>
      <% end %>
      
      <%#= render "admin/shared/links" %>

    </div>
  </div>
</div>
