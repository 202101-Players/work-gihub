<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-8 px-5 px-sm-0">
      
      <div class=" mt-4 mb-5">
        <h4 class="px-3 font-weight-bold d-inline-block", style="background-color: #eaf4fc">商品新規登録</h4><br>
      </div>
      
      <%= form_with model: @item, url: admin_items_path, local:true do |f| %>
        <div class="d-flex flex-row">
          <div class="title" style="margin-left: 140px;">
            <p>商品画像</p>
          </div>
          
          <div class="d-flex">
            <%= f.label :" ", class:"label" %>
              <label class="input-group-btn">
                <span class="btn btn-outline-dark mr-2">
                  ファイルを選択<input type="file" style="display:none">
                </span>
              </label>
              <input type="text" class="form-control" readonly="" placeholder="選択されていません" style="width: 160px;">
          </div>
        </div>

        <div class="d-flex flex-row mt-3">
          <div class="title" style="margin-left: 140px;">
            <p>商品名</p>
          </div>
          
          <div class="d-flex">
            <%= f.label :" ", class:"label" %>
            <%= f.text_field :name, autofocus: true, autocomplete:"current-password", class:'form form-control', style:'width: 300px;' %>
          </div>
        </div>
        
        <div class="d-flex flex-row mt-3">
          <div class="title" style="margin-left: 140px;">
            <p>商品悦明</p>
          </div>
          
          <div class="d-flex">
            <%= f.label :" ", class:"label" %>
            <%= f.text_field :name, autofocus: true, autocomplete:"current-password", class:'form form-control', style:'width: 300px; height: 200px;' %>
          </div>
        </div>
        <div class="d-flex flex-row mt-3">
          <div class="title" style="margin-left: 140px;">
            <p></p>
          </div>
          
          <div class="d-flex my-5">
            <%= f.label :" ", class:"label" %>
            <button type="submit" class="btn btn-primary btn-block btn-size">ログイン</button>
          </div>
        </div>
      <% end %>
      
      <%#= render "admin/shared/links" %>

    </div>
  </div>
</div>





<div class="container">
 <h4>商品新規登録</h4>
 <div class="row">



   <div>
    <.label :"商品名" %>
    <.text_field :name %>
   </div>
   <div>
    <.label :"商品説明" %>
    <.text_area :introduction %>
   </div>
   <div>
    <.label :"ジャンル" %>
    <.collection_select :genre_id, @genres, :id, :name, prompt: "-- 選択してください --" %>
   </div>
   <div>
    <.label :"税抜価格" %>
    <.text_field :price %>円
   </div>
   <div>
    <.radio_button :is_active, true %>
    <.label :is_active, '販売中', value: true %>
   </div>
   <div>
    <.radio_button :is_active, false %>
    <.label :is_active, '販売停止中', value: false %>
   </div>
    <.submit '新規登録' %>

 </div>
</div>

