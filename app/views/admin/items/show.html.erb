<div class="container">
  <div class="row">
      商品詳細
  </div>
  <div class="row">
    <div class="col-4">
      <%= attachment_image_tag @item, :image, size:'300x200' %>
    </div>
    <div class=col>
      <table>
        <tr>
          <th></th>
          <th></th>
        </tr>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>価格</td>
          <td>￥<%= (@item.price*1.10).to_i %><span class="small">（税込）</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td >
          <% if @item.is_active == true %>
        	 <div class="text-success mx-3"><%= "販売中" %></div>
          <% else %>
        	 <div class="text-success mx-3"><%= "販売停止中" %></div>
          <% end %>
          </td>
        </tr>
      </table>

      <%= link_to '編集する', edit_admin_item_path(@item.id), class: 'btn btn-success btn-sm' %>
    </div>

  </div>
</div>