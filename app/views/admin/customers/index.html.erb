<div class="container px-5 px-sm-0">
 <h2>会員一覧</h2>
        <table class="table table-striped">
          <tr>
           <th>会員ID</th>
           <th>氏名</th>
           <th>メールアドレス</th>
           <th>ステータス</th>
           <th colspan="4"></th>
          </tr>
          <% @customers.each do |customer| %>
           <tr>
           <td><%= customer.id %></td>
           <td><%= link_to admin_customer_path(customer) do %>
             <%= customer.last_name %><%= customer.first_name %></td>
             <% end %>
             <td><%= customer.email %></td>
             <td><% if customer.is_deleted == true %>
               <%= "有効" %>
               <% else %>
               <%= "退会" %>
             </td>
               <% end %>
           </tr>
          <% end %>
         </table>

  </div>
</div>