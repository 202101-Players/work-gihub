<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :"名前（姓）" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete:"last_name" %>
  </div>
  
  <div class="field">
    <%= f.label :"名前（名）" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete:"first_name" %>
  </div>
  
  <div class="field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :"郵便番号" %>
    <%= f.text_field :postal_code, autocomplete: "postal_code" %>
  </div>
  
  <div class="field">
    <%= f.label :"住所" %>
    <%= f.text_field :address, autocomplete: "address"  %>
  </div>
  
  <div class="field">
    <%= f.label :"電話番号" %>
    <%= f.text_field :telephone_number, autocomplete: "telephone_number" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="パスワード（確認用）">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "customers/shared/links" %>
